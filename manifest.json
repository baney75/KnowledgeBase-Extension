{
  "manifest_version": 3,
  "name": "KnowledgeBase",
  "version": "1.3.0",
  "description": "Save any page as AI-ready Markdown for your KnowledgeBase",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "offscreen",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
